<odoo>
    <data>
        <record model="ir.ui.view" id="restaurapp_app.ol_model_kitchen_form">
            <field name="name">OrderLine Kitchen Form</field>
            <field name="model">restaurapp_app.ol_model</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="changeLine" type="object" string="Change Line" class="oe_highlight" confirm="Do you want to change the state of the order?"/>
                    </header>
                    <sheet>
                        <group>
                            <field name = "product_id"/>
                            <field name = "quantity"/>
                            <field name = "isdone"/>
                            <field name = "active" invisible = "True"/>
                            <field name = "description" widget="html"/> 
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="restaurapp_app.ol_model_kitchen_list">
            <field name="name">OrderLine Kitchen List</field>
            <field name="model">restaurapp_app.ol_model</field>
            <field name="arch" type="xml">
                <tree decoration-danger ="isdone == False">
                    <field name = "product_id"/>
                    <field name = "quantity"/>
                    <field name = "isdone"/>
                    <field name = "active" invisible = "True"/>
                    <field name = "description"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="restaurapp_app.action_window_olkitchen_list">
            <field name="name">OrderLine Kitchen List</field>
            <field name="res_model">restaurapp_app.ol_model</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('isdone','=','False')]</field>
        </record>

    </data>
</odoo>